<div class="row">
  <div class="col-md-6">
    <form action="/story/add/{{username}}" method="POST">
      <h1>Write your story</h1>
      <blockquote class="blockquote">
        <p class="mb-0">Writing about your experience is...</p>
          <footer class="blockquote-footer">Someone famous in <cite title="Source Title">Source Title</cite></footer>
      </blockquote>
      <div class="form-group">
        <label for="exampleFormControlTextarea1">Write your story below</label>
        <textarea name="content" class="form-control" id="exampleFormControlTextarea1" rows="5"></textarea>
      </div>
      <button type="submit" class="btn btn-primary mb-2">Add Story</button>

    </form>
  </div>
  <div class="col-md-6">
    <h2>Your stories</h2>

    <div>
      <blockquote class="blockquote">
        <p class="mb-0">By sharing you show you care</p>
          <footer class="blockquote-footer">Someone famous in <cite title="Source Title">Source Title</cite></footer>
      </blockquote>
    </div>

    {{#each stories}}
    <div class="card">
      <div class="card-header">
        Story
      </div>
      <div class="card-body">
        <blockquote class="blockquote mb-0">
          <p>{{content}}</p>

          <footer class="blockquote-footer">Someone famous in <cite title="Source Title">Source Title</cite></footer>
        </blockquote>
        <form action="/story/{{id}}/make_public/{{../username}}" method="POST">
          {{#unless is_public}}
          <button type="submit" class="btn btn-info mb-2">Make public</button>
          {{/unless}}
          {{#if is_public}}
          <span class="badge badge-success">Well done!</span> For sharing your story.
          {{/if}}
        </form>
      </div>
    </div>
    {{/each}}
  </div>

  <a href="/stories/{{username}}">Read some stories</a>


</div>




