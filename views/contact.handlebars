<div class="container">
    <div class="row">
        <div class="col-lg-5">
            <div class="news">

                <div class="news_container">
                    <div class="footer_contact_title">Quick Contact</div>
                    <div class="footer_contact">

                        <div class="footer_contact_form_container">
                            <form action="/contactUs" method="POST" class="footer_contact_form" id="footer_contact_form">
                                <div class="d-flex flex-xl-row flex-column align-items-center justify-content-between">
                                    <input type="text" name="name" class="footer_contact_input" placeholder="Name" required>
                                    <input type="text"name="number" class="footer_contact_input" placeholder="Cellphone number" required>
                                </div>
                                <textarea class="footer_contact_input footer_contact_textarea" placeholder="Message"
                                    name="mess"></textarea>
                                <button type="submit" class="footer_contact_button">send message</button>


                            </form>


                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="w-100"></div>
    <div class="row">
        <div class="col mt-5"></div>
            <h4 class="text-warning">{{messages.info}}</h4>
            <h4 class="text-success">{{messages.success}}</h4>
        </div>
    </div>
</div>